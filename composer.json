{
    "name": "johninamillion/php-git",
    "description": "A lightweight PHP wrapper for common Git CLI commands.",
    "authors": [
        {
            "name": "johninamillion",
            "email": "john@millionvisions.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "johninamillion\\Git\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "johninamillion\\Git\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.3",
        "ext-curl": "*",
        "symfony/console": "^6.2|^7.0",
        "symfony/process": "^6.2|^7.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "johninamillion/php-code-styles": "^0.2.0",
        "phpunit/phpunit": "^12.0"
    },
    "scripts": {
        "post-install-cmd": [
            "johninamillion\\PHPCodeStyles\\Composer::install"
        ],
        "post-update-cmd": [
            "johninamillion\\PHPCodeStyles\\Composer::update"
        ],
        "code:analyse": "./vendor/bin/phpstan analyse",
        "code:format": "./vendor/bin/php-cs-fixer fix",
        "test": "./vendor/bin/phpunit --testdox",
        "test:coverage": "./vendor/bin/phpunit --coverage-php src/"
    }
}
